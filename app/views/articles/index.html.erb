<h1 class="text-center">All Articles</h1>
<%= link_to " Create New Article", new_article_path %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td>
        <%= link_to "Edit", edit_article_path(a), :class => "btn btn-primary" %>
        <%= link_to 'Show', article_path(a), :class => "btn btn-success" %>
        <%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
