<h1>All Articles</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td>
        <%= link_to "New", new_article_path %>
        <%= link_to "Edit", edit_article_path(a) %>
        <%= link_to 'Show', article_path(a) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
