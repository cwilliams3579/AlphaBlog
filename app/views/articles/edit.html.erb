<%= render 'shared/errors', obj: @article%>
<% provide(:title, "Edit article") %>
<h1 class="text-center">Edit article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: 'form-control' %>

    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>

    <%= f.submit "Save changes", class: "btn btn-primary btn-lg btn-block", id: "edit-btn" %>
    <% end %>
  </div>
</div>
<div class="text-center" id="edit-cancel">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
