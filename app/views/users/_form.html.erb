<%= render 'layouts/messages', obj: @user %>
<% provide(:title, "Edit profile") %>
<h1 class="text-center">Edit your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <%= f.label :user_name %>
    <%= f.text_field :username, class: 'form-control', placeholder: "Enter username", autofocus: true %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', placeholder: "johndoe@gmail.com" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg btn-block", id: "edit-btn") %>
    <% end %>
  </div>
</div>
<div class="text-center" id="edit-cancel">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
